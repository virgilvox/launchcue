# MongoDB connection string
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"

# Secret key for signing JWT tokens (use a strong, random string)
JWT_SECRET="YOUR_STRONG_RANDOM_JWT_SECRET_HERE"

# (Optional) Anthropic API Key for AI features
# ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY"

# (Optional) Frontend Base URL if different from root during development
# VITE_BASE_URL="/"

# (Optional) API URL if Netlify Dev isn't proxying correctly or for external API
# VITE_API_URL="http://localhost:8888/.netlify/functions" 